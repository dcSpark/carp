{
  "name": "carp",
  "version": "1.0.0",
  "description": "API for the Postgres database generated by Carp",
  "main": "app/index.js",
  "scripts": {
    "eslint": "eslint app",
    "typecheck": "tsc --project tsconfig.json",
    "dev": "npx pgtyped --uri -c config.json && yarn build && concurrently \"nodemon -x tsoa spec-and-routes\" \"npx pgtyped -w -c config.json\" \"nodemon\"",
    "build": "tsoa spec-and-routes && tsc --project tsconfig.build.json --outDir build --experimentalDecorators",
    "start": "NODE_ENV=production node build/app/server.js",
    "parse-db": "pg_dump --no-owner --schema-only -d $DATABASE_URL > bin/schema.sql && npx pgtyped --uri -c config.json && npx zapatos && cd bin && . ./gen-graph.sh && cd ..",
    "prettier": "prettier --write \"**/*.tsx\"",
    "query": "psql -U $PGUSER -h $POSTGRES_HOST -d $POSTGRES_DB -f ./test_query.sql",
    "publish:swagger": "yarn build && cp ./build/server/build/swagger.json ../gh-pages/swagger.json && gh-pages -d ../gh-pages"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dcSpark/carp.git"
  },
  "author": "https://github.com/dcSpark",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dcSpark/carp/issues"
  },
  "homepage": "https://github.com/dcSpark/carp#readme",
  "dependencies": {
    "@dcspark/cardano-multiplatform-lib-nodejs": "^0.2.0",
    "@dcspark/cip5-js": "^1.0.0",
    "@pgtyped/cli": "0.13.0",
    "@pgtyped/query": "0.13.0",
    "assert-never": "^1.2.1",
    "bech32": "2.0.0",
    "body-parser": "1.20.0",
    "express": "4.17.3",
    "http-status-codes": "2.2.0",
    "lodash": "^4.17.21",
    "pg": "8.7.3",
    "pg-tx": "^1.0.1",
    "swagger-ui-express": "4.3.0",
    "tsd": "^0.20.0",
    "tsoa": "3.14.1"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.2",
    "@types/eslint": "8.4.1",
    "@types/eslint-plugin-prettier": "3.1.0",
    "@types/express": "4.17.13",
    "@types/lodash": "^4.14.182",
    "@types/node": "17.0.23",
    "@types/pg": "8.6.5",
    "@types/prettier": "2.6.0",
    "@types/swagger-ui-express": "4.1.3",
    "@typescript-eslint/eslint-plugin": "5.18.0",
    "@typescript-eslint/parser": "5.18.0",
    "concurrently": "7.1.0",
    "eslint": "8.13.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.1.4",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "6.0.0",
    "gh-pages": "^3.2.3",
    "nodemon": "2.0.15",
    "prettier": "2.6.2",
    "ts-node": "10.7.0",
    "typescript": "4.6.3",
    "zapatos": "^5.0.2"
  }
}
