{
  "name": "carp",
  "version": "2.1.2",
  "description": "API for the Postgres database generated by Carp",
  "main": "app/index.js",
  "scripts": {
    "eslint": "eslint app",
    "typecheck": "tsc --project tsconfig.json",
    "build": "tsoa spec-and-routes && tsc --project tsconfig.build.json --outDir build --experimentalDecorators",
    "dev:start": "npx pgtyped --uri -c config.json && yarn build && concurrently \"nodemon -x tsoa spec-and-routes\" \"npx pgtyped -w -c config.json\" \"nodemon\"",
    "prod:start": "yarn build && NODE_ENV=production node build/server/app/server.js",
    "parse-db": "npx pgtyped --uri -c config.json && npx zapatos",
    "prettier": "prettier --write \"**/*.tsx\"",
    "query": "psql -U $PGUSER -h $POSTGRES_HOST -d $POSTGRES_DB -f ./test_query.sql",
    "publish:openapi": "yarn build && cp ./build/server/build/swagger.json ../../docs/bin/openapi.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dcSpark/carp.git"
  },
  "author": "https://github.com/dcSpark",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dcSpark/carp/issues"
  },
  "homepage": "https://github.com/dcSpark/carp#readme",
  "dependencies": {
    "@dcspark/cardano-multiplatform-lib-nodejs": "3.0.1",
    "@dcspark/cip5-js": "^1.0.0",
    "@pgtyped/cli": "1.0.2",
    "@pgtyped/query": "1.0.1",
    "assert-never": "^1.2.1",
    "bech32": "2.0.0",
    "body-parser": "1.20.0",
    "express": "4.18.1",
    "http-status-codes": "2.2.0",
    "lodash": "^4.17.21",
    "pg": "8.8.0",
    "pg-tx": "^1.0.1",
    "swagger-ui-express": "4.5.0",
    "tsd": "0.24.1",
    "tsoa": "4.1.2"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.2",
    "@types/eslint": "8.4.6",
    "@types/eslint-plugin-prettier": "3.1.0",
    "@types/express": "4.17.14",
    "@types/lodash": "^4.14.185",
    "@types/node": "17.0.23",
    "@types/pg": "8.6.5",
    "@types/prettier": "2.7.0",
    "@types/swagger-ui-express": "4.1.3",
    "@typescript-eslint/eslint-plugin": "5.38.0",
    "@typescript-eslint/parser": "5.38.0",
    "concurrently": "7.4.0",
    "eslint": "8.23.1",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.0.1",
    "nodemon": "2.0.20",
    "prettier": "2.7.1",
    "ts-node": "10.9.1",
    "typescript": "4.7.4",
    "zapatos": "^5.0.4"
  }
}
